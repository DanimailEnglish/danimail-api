rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
    	// Allow everything for admins
      allow read, write: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/protected/roles) && get(/databases/$(database)/documents/users/$(request.auth.uid)/protected/roles).data.admin == true;
    }

    match /users/{userId} {
	    // Users can freely read and write their own records
      allow read, write: if request.auth != null && request.auth.uid == userId
      
      // Users can freely read these fields but only admins can write
      match /protected/admin {
      	allow read: if request.auth != null && request.auth.uid == userId
        allow write: if false
      }
    }
  }
}